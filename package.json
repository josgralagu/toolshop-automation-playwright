{
  "name": "toolshop-automation-playwright",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
	"test:playwright": "npx playwright test --config=src/configs/playwrightConfigs/playwright.config.js",
  "test:playwright:file": "npx playwright test src/tests/playwright-tests/example.spec.js --config=src/configs/playwrightConfigs/playwright.config.js", 
  "test:playwright:headed": "npx playwright test --headed --config=src/configs/playwrightConfigs/playwright.config.js", 
	"test:playwright:ui": "npx playwright test --ui --config=src/configs/playwrightConfigs/playwright.config.js",
	"test:playwright:chrome": "npx playwright test --project=chromium --config=src/configs/playwrightConfigs/playwright.config.js",
	"test:playwright:firefox": "npx playwright test --project=firefox --config=src/configs/playwrightConfigs/playwright.config.js",
	"test:playwright:msedge": "npx playwright test --project=msedge --config=src/configs/playwrightConfigs/playwright.config.js",
  "test:playwright:debug": "npx playwright test --debug --config=src/configs/playwrightConfigs/playwright.config.js",
	"test:playwright:report": "npx playwright show-report",
	"test:mocha": "npx mocha src/tests/mocha-chai-tests/**/*.spec.js --config src/configs/mochaConfigs/.mocharc.json",
  "test:mocha:file": "npx mocha src/tests/mocha-chai-tests/example.spec.js --config src/configs/mochaConfigs/.mocharc.json",
	"test:mocha:watch": "npx mocha src/tests/mocha-chai-tests/**/*.spec.js --watch --config src/configs/mochaConfigs/.mocharc.json",
	"test:mocha:reporter": "npx mocha src/tests/mocha-chai-tests/**/*.spec.js --reporter spec --config src/configs/mochaConfigs/.mocharc.json", 
	"test:mocha:serial": "npx mocha src/tests/mocha-chai-tests/**/*.spec.js --parallel false --config src/configs/mochaConfigs/.mocharc.json",
	"test:mocha:grep": "npx mocha src/tests/mocha-chai-tests/**/*.spec.js --grep --config src/configs/mochaConfigs/.mocharc.json",
  "test:all": "npm run test:playwright && npm run test:mocha",
  "test:all:headed": "npm run test:playwright:headed && npm run test:mocha",
  "test:all:parallel": "npm run test:playwright & npm run test:mocha"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "e2e"
  ],
  "author": "Jos√© Emmanuel Grajales Lagunes",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.0",
    "chai": "^6.2.1",
    "mocha": "^11.7.5",
    "playwright": "^1.56.1"
  },
  "dependencies": {
    "should": "^13.2.3"
  }
}
