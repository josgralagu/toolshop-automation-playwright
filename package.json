{
  "name": "toolshop-automation-playwright",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
	"test:playwright": "npx playwright test",
  "test:playwright:file": "npx playwright test src/po/Tests/example.spec.js", 
	"test:playwright:headed": "npx playwright test --headed", 
	"test:playwright:ui": "npx playwright test --ui",
	"test:playwright:chrome": "npx playwright test --project=chromium",
	"test:playwright:firefox": "npx playwright test --project=firefox",
	"test:playwright:msedge": "npx playwright test --project=msedge",
  "test:playwright:debug": "npx playwright test --debug",
	"test:playwright:report": "npx playwright show-report",
	"test:mocha": "npx mocha tests-mocha-migration/**/*.spec.js",
  "test:mocha:file": "npx mocha tests-mocha-migration/example.spec.js",
	"test:mocha:watch": "npx mocha tests-mocha-migration/**/*.spec.js --watch",
	"test:mocha:reporter": "npx mocha tests-mocha-migration/**/*.spec.js --reporter spec", 
	"test:mocha:serial": "npx mocha tests-mocha-migration/**/*.spec.js --parallel false",
	"test:mocha:grep": "npx mocha tests-mocha-migration/**/*.spec.js --grep",
  "test:all": "npm run test:playwright && npm run test:mocha",
  "test:all:headed": "npm run test:playwright:headed && npm run test:mocha",
  "test:all:parallel": "npm run test:playwright & npm run test:mocha"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "e2e"
  ],
  "author": "Jos√© Emmanuel Grajales Lagunes",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.0",
    "chai": "^6.2.1",
    "mocha": "^11.7.5",
    "playwright": "^1.56.1"
  },
  "dependencies": {
    "should": "^13.2.3"
  }
}
